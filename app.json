{
  "name": "AnimepaheAPI",
  "description": "An unofficial REST API for Animepahe that provides access to anime information, episodes, and streaming links.",
  "repository": "https://github.com/ElijahCodes12345/animepahe-api",
  "logo": "https://animepahe.ru/apple-touch-icon.png",
  "keywords": ["node", "express", "anime", "api"],
  "env": {
    "PORT": {
      "description": "Port number for the server (default: 3000)",
      "required": false
    },
    "BASE_URL": {
      "description": "Base URL for animepahe (default: https://animepahe.ru)",
      "required": false
    },
    "USER_AGENT": {
      "description": "Custom user agent string",
      "required": false
    },
    "COOKIES": {
      "description": "Manual cookie management",
      "required": false
    },
    "USE_PROXY": {
      "description": "Whether to use proxies (default: false)",
      "required": false
    },
    "PROXIES": {
      "description": "Comma-separated proxy URLs",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
